{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#e8b440",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#c0840c",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#e6e6e6",
          "name": "Tertiary",
          "slug": "tertiary"
        },
        {
          "color": "#9d9d9d",
          "name": "Quaternary",
          "slug": "quaternary"
        },
        {
          "color": "#707070",
          "name": "Quinary",
          "slug": "quinary"
        },
        {
          "color": "#ffffff",
          "name": "White",
          "slug": "white"
        },
        {
          "color": "#000000",
          "name": "Black",
          "slug": "black"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(to right, rgba(0, 0, 0, 0.57) 0%, rgba(0, 0, 0, 0.2) 100%)",
          "name": "Dark to Light",
          "slug": "dark-to-light"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Open Sans\", sans-serif",
          "name": "Body",
          "slug": "body",
          "fontFace": [
            {
              "fontFamily": "Open Sans",
              "fontStyle": "normal",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/open-sans/open-sans-v40-latin-regular.woff2"
              ]
            },
            {
              "fontFamily": "Open Sans",
              "fontStyle": "normal",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/open-sans/open-sans-v40-latin-600.woff2"
              ]
            },
            {
              "fontFamily": "Open Sans",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/open-sans/open-sans-v40-latin-700.woff2"
              ]
            }
          ]
        },
        {
          "fontFamily": "\"Roboto\", sans-serif",
          "name": "Heading",
          "slug": "heading",
          "fontFace": [
            {
              "fontFamily": "Roboto",
              "fontStyle": "normal",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/roboto/roboto-v47-latin-regular.woff2"
              ]
            },
            {
              "fontFamily": "Roboto",
              "fontStyle": "normal",
              "fontWeight": "500",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/roboto/roboto-v47-latin-500.woff2"
              ]
            },
            {
              "fontFamily": "Roboto",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/roboto/roboto-v47-latin-700.woff2"
              ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "size": "0.875rem",
          "name": "Extra Small",
          "slug": "cai-extra-small"
        },
        {
          "size": "1rem",
          "name": "Small",
          "slug": "cai-small"
        },
        {
          "size": "1.125rem",
          "name": "Normal",
          "slug": "cai-normal"
        },
        {
          "size": "1.375rem",
          "name": "Normal Plus",
          "slug": "cai-normal-plus"
        },
        {
          "size": "clamp(1.625rem, 0.933rem + 1.923vw, 2.125rem)",
          "name": "Medium",
          "slug": "cai-medium"
        },
        {
          "size": "clamp(2.25rem, 1.558rem + 1.923vw, 2.75rem)",
          "name": "Large",
          "slug": "cai-large"
        },
        {
          "size": "clamp(2.875rem, 2.183rem + 1.923vw, 3.375rem)",
          "name": "Extra Large",
          "slug": "cai-extra-large"
        },
        {
          "size": "clamp(3.5rem, 2.288rem + 3.365vw, 4.375rem)",
          "name": "huge",
          "slug": "cai-huge"
        }
      ],
      "lineHeight": true,
      "customFontSize": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "1400px",
      "wideSize": "null"
    },
    "shadow": {
      "presets": [
        {
          "name": "Light Shadow",
          "slug": "light-shadow",
          "shadow": "0px 3px 10px rgba(0,0,0,.25)"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontSize": "var(--wp--preset--font-size--cai-normal)",
      "fontFamily": "var(--wp--preset--font-family--body)"
    },
    "color": {
      "text": "var(--wp--preset--color--black)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "4px"
        },
        "shadow": "0px 7px 30px rgba(192, 132, 12, .5)",
        "spacing": {
          "margin": {
            "top": "25px"
          },
          "padding": {
            "top": "14px",
            "right": "32px",
            "bottom": "14px",
            "left": "32px"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--cai-medium)",
          "textDecoration": "none"
        },
        "color": {
          "text": "var(--wp--preset--color--black)",
          "background": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--black",
            "background": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--color--black)",
            "background": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--cai-extra-large)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--cai-large)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--cai-medium)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--cai-normal)"
        }
      },
      "link": {
        "color": {
          "text": "inherit"
        },
        "typography": {
          "textDecoration": "none",
          "fontWeight": "700"
        },
        ":hover": {
          "color": {
            "text": "inherit"
          },
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":focus": {
          "color": {
            "text": "inherit"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    }
  }
}